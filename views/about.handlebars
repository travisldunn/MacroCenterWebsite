<title>{{page.title}}</title>
<style>
  table, td, th
  {
    border: 1px solid black;
    text-align: center;
    padding: 3px;
  }
</style>
<h1>{{page.header}}</h1><hr>
<div>

<div id="about">
</div>

{{{page.description}}}
{{{page.contactLink}}}
{{{page.info}}}
{{{page.directions}}}
{{{page.employeesLink}}}
{{#if page.employee}}
    <!-- <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Email</th>
      <th>Bio</th>
    </tr> -->
    {{#each page.employee}}
    <table>
      <tr>
        <td>{{name}}</td>
      </tr>
      <tr>
        <td>Title: {{title}}</td>
      </tr>
      <tr>
        <td>Email: {{email}}</td>
      </tr>
      <tr>
        <td>Bio: {{bio}}</td>
      </tr>
      <tr>
        <td><img class="img-responsive" src="../{{image}}"/></td>
      </tr>
    </table>
    {{/each}}
{{/if}}
{{{page.script}}}
</div>
