<div class="container-fluid">
  <div class="card col-md-5 col-md-offset-4" id="mainCard">
    <h3 class="card-header">Create Account</h3>
    <div class="card-block">
      <form>
        <div class="form-group row">
          <div class="col-sm-10">
            <input type="text" class="form-control" id="createUserName" placeholder="Name">
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-10">
            <input type="text" class="form-control" id="createUserUsername" placeholder="Username">
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-10">
            <input type="password" class="form-control" id="createUserPassword" placeholder="Password">
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-10">
            <input type="text" class="form-control" id="createUserAddress" placeholder="Address">
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-10">
            <input type="text" class="form-control" id="createUserAddressType" placeholder="Address Type">
          </div>
        </div>
        <a href="#" class="btn btn-primary" id="createuser">Create User</a>
      </form>

    </div>
  </div>

  <p id="creationResults"></p>


</div>
