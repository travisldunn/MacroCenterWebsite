</div>



{{!-- {{page.cart[1]}} --}}
<div class="row">
<div class="col-md-3">
</div>
<div class="col-md-6">
  {{#each page.myCart}}


  
    <div class="card card-block">
      <h3 class="card-title">{{products.name}}</h3>
     
      <p class="card-text"> Discription: {{products.description}}</p>
      <div class = "row">
     <div class="col-md-6">
       <p class="card-text"> <h3>Price: {{products.price}} </h3></p>
       </div>
  <div class="col-md-6">
       <p class="card-text"> <h3>Quantity {{products.items.[0].quantity}} </h3> </p>
       </div>
       </div>

       <div class = "row">
     <div class="col-md-6">
         <a href="cart/deleteFromCart/{{products.items.[0].id}}" class="btn btn-danger"> Delete from  Cart</a>
       </div>
  <div class="col-md-6">
         <a href="#" class="btn btn-success">Update  Cart</a>
       </div>
       </div>

    
    </div>
  
  

 
  {{/each}}
  </div>

  <div class ="row">
  <div class="col-md-3 col-md-offset-6">
  <h3>Subtotal: $ {{page.subtotal}} </h3>
  </div>
  <div class="col-md-3 col-md-offset-6">
<a class="btn btn-warning" href="shoppingcart/checkout" type="submit">Proceed to checkout</button> </a>
 <br>
  </div>

  </div>
  </div>

{{{page.script}}}
</div>
